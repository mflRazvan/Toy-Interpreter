<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="724.0" prefWidth="749.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gui.interpreter.runProgram">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20">
      <children>
         <HBox>
            <children>
               <Label prefHeight="18.0" prefWidth="365.0" text="Program States" />
               <Label prefHeight="18.0" prefWidth="341.0" text="File table" />
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="20">
            <children>
               <ListView fx:id="prgState" prefHeight="200.0" prefWidth="400.0" />
               <ListView fx:id="fileTable" prefHeight="200.0" prefWidth="400.0" />
            </children>
         </HBox>
         <HBox>
            <children>
               <Label prefHeight="18.0" prefWidth="365.0" text="Exe Stack" />
               <Label prefHeight="18.0" prefWidth="336.0" text="Out table" />
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="20">
            <children>
               <ListView fx:id="exeStack" prefHeight="200.0" prefWidth="400.0" />
               <ListView fx:id="outputTable" prefHeight="200.0" prefWidth="400.0" />
            </children>
         </HBox>
      </children>
   </VBox>
   <HBox>
      <children>
         <Label prefHeight="18.0" prefWidth="138.0" text="Program States number: " />
         <TextField fx:id="prgStateNumber" prefHeight="26.0" prefWidth="583.0" />
      </children>
   </HBox>
   <TableView fx:id="heapTable" prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn fx:id="heapAddress" prefWidth="355.0" text="Address" />
       <TableColumn fx:id="heapValue" prefWidth="355.0" text="Value" />
     </columns>
   </TableView>
   <TableView fx:id="symbolTable" prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn fx:id="symbolName" prefWidth="355.0" text="Var name" />
       <TableColumn fx:id="symbolValue" prefWidth="355.0" text="Value" />
     </columns>
   </TableView>
   <TableView fx:id="semaphoreTable" prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn fx:id="semaphoreIndex" prefWidth="237" text="Index" />
       <TableColumn fx:id="semaphoreValue" minWidth="0.0" prefWidth="237" text="Value" />
       <TableColumn fx:id="semaphoreList" minWidth="0.0" prefWidth="237" text="List" />
     </columns>
   </TableView>
  <Button fx:id="nextStepButton" text="Next Step" />
</VBox>
